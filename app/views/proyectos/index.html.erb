<section>
  <div class="page-header">
    <h1>Proyectos<small> Lista de acciones</small></h1>
  </div>
  
    <table class="table table-striped table-bordered table-condensed">
      <thead>
      <th>Titulo</th>
      <th>Acciones</th>
      </thead>
      <% @proyectos.each do |proyecto| %>
	<tr>
	  <td><%= proyecto.nombre %></td>
	  <td>
	    <%= link_to 'Galeria', index_fotos_path(:id => proyecto.id) %>
	    <%= link_to 'Videos', index_videos_path(:id => proyecto.id) %>
	    <%= link_to 'Ver', proyecto %>
	    <%= link_to 'Editar', edit_proyecto_path(proyecto)%>
	    <%= link_to 'Eliminar', proyecto, confirm: 'Esta seguro?', method: :delete %>
	  </td>
	</tr>

      <% end %>
    </table>

    <%= link_to 'Agregar Proyecto', new_proyecto_path, :class => 'btn btn-primary' %>
</section>