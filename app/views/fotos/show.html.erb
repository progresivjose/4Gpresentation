<h2>Ver Imagen <small>Proyecto </small></h2>
<hr />

<p id="notice"><%= notice %></p>
<div style="margin-bottom: 20px;">
  <%= link_to content_tag(:i, '', :class => 'icon-arrow-left', :title => 'Volver a Galeria'), index_fotos_path(:id => @foto.proyecto_id)  %>
  <%= link_to content_tag(:i, '', :class => 'icon-edit', :title => 'Editar'), edit_foto_path(@foto) %> 
</div>

<table>
  <tr>
    <td><b>Nombre:</b></td>
    <td><%= @foto.nombre %></td>
  </tr>

  <tr>

    <td><b>Descripcion:</b></td>
    <td><%= @foto.descripcion %></td>

  </tr>
  <tr>

    <td><b>Tipo:</b></td>
    <td><%= @foto.tipo %></td>
  </tr>
  <tr>

    <td><b>Imagen:</b></td>
    <td><%= image_tag @foto.imagen.thumb('200x200').url if @foto.imagen_uid%></td>

  </tr>
</table>

