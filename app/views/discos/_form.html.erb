<%= form_for @disco, :html => { :multipart => true } do |f| %>
  <% if @disco.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@disco.errors.count, "error") %> prohibited this disco from being saved:</h2>

      <ul>
	<% @disco.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
<div class="span4">
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion %>
  </div>

  <div class="field">
    <%= f.label :imagen %><br />
    <%= f.file_field :imagen %>
  </div>

  <div class="field">
    <%= f.label :muestra, 'Audio ogg' %><br />
    <%= f.file_field :muestra %>
  </div>

  <div class="field">
    <%= f.label :audio_mp3, 'Audio mp3' %><br />
    <%= f.file_field :audio_mp3	 %>
  </div>
</div>
  <div class="span6">
<fieldset>
    <legend>Pistas</legend>
    <%= link_to_add_fields content_tag(:i, '', :class => 'icon-plus', :title => 'Agregar Pista'), f, :pistas, :container => 'pistas' %>
    <table>
      <thead style="margin-bottom: 20px;">
	<tr>
	  <th>Nombre</th>
	</tr>

      </thead>
      <tbody id="pistas">
	<%= f.fields_for :pistas do |builder| %>
	  <%= render "campos_pista", :f => builder %>
	<% end %>
      </tbody>
    </table>
    
  </fieldset>
  </div>
</div>
  <div class="actions">
    <%= f.submit%>
  </div>
<% end %>
