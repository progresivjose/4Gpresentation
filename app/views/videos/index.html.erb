<h2>Galeria de Videos <small>Proyecto </small></h2>
<hr />
<div style="margin-bottom: 20px;">
  <%= link_to content_tag(:i, '', :class => 'icon-arrow-left', :title => 'Volver a Proyectos'), proyectos_path %>  
  <%= link_to content_tag(:i, '', :class => 'icon-plus', :title => 'Agregar Video'), new_video_path(params[:id]) %>
</div>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th></th>

  </tr>

  <% @videos.each do |video| %>
    <tr>
      <td><%= video.nombre %></td>
      <td><%= video.descripcion %></td>
      <td>
	<%= link_to content_tag(:i, '', :class => 'icon-list-alt', :title => 'Ver Video'), video %>
	<%= link_to content_tag(:i, '', :class => 'icon-edit', :title => 'Editar Video'), edit_video_path(video) %>
	<%= link_to content_tag(:i, '', :class => 'icon-ban-circle', :title => 'Eliminar Video'), video, confirm: 'Esta seguro?', method: :delete %>
      </td>
    </tr>
  <% end %>
</table>
