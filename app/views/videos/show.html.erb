<p id="notice"><%= notice %></p>
<div style="margin-bottom: 20px;">
  <%= link_to content_tag(:i, '', :class => 'icon-arrow-left', :title => 'Volver a Videos'), videos_path(:id => @video.proyecto_id)  %>
  <%= link_to content_tag(:i, '', :class => 'icon-edit', :title => 'Editar'), edit_video_path(@foto) %> 
</div>

<p>
  <b>Nombre:</b>
  <%= @video.nombre %>
</p>

<p>
  <b>Descripcion:</b>
  <%= @video.descripcion %>
</p>

<p>
  <b>Video:</b>
<%# browser = request.env['HTTP_USER_AGENT'] %>
<%# case browser %>
<%# when /Firefox/  then %>
